<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/google_logo1200x630">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="200dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/profilemail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="250dp"
            android:text="MailId"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/profilesignout"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginTop="350dp"
            android:text="SignOut"
            android:textSize="17sp"
            app:backgroundTint="#F30202"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/googleProfileBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="620dp"
        android:text="Back"
        android:textColor="#939090"
        app:backgroundTint="#FFFFFF"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconPadding="2dp"
        app:iconTint="#9A9797" />

</RelativeLayout>